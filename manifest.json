{
  "manifest_version": 3,
  "name": "One-Touch Switcher",
  "version": "1.0",
  "description": "Switch theme groups with custom backgrounds.",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "type": "module"
    }
  ]
}