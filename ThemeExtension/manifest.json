{
  "manifest_version": 3,
  "name": "Live Theme Switcher",
  "version": "3.0",
  "description": "Dynamically inject themes and live backgrounds into any website.",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "toggle-theme": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Switch Theme Without Popup"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}